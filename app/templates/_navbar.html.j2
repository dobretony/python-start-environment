{% set navigation_bar_general = [
    ('index', 'Home'),
    ('explore', 'Explore'),
    ('about', 'About')
] -%}

{% set navigation_bar_anonymous = [
    ('auth.login', 'Login'),
    ('auth.register', 'Register')
] -%}

{% set active_page = active_page|default('index') -%}

<nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">{{project_name}}</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            {% for id, title in navigation_bar_general %}
            <li {% if id==active_page %} class="active" {% endif %}>
              <a href="{{ url_for(id) }}">
                {{ title }}
              </a>
            </li>
            {% endfor %}
          </ul>
          <ul class="nav navbar-nav navbar-right">
            {% if current_user.is_anonymous %}
              {% for id, title in navigation_bar_anonymous %}
              <li {% if id==active_page %}class="active" {% endif %}>
                <a href="{{ url_for(id) }}">
                  {{title}}
                  {% if id==active_page %} <span class="sr-only">(current)</span>{% endif %}
                </a>
              </li>
              {% endfor %}
            {% else %}
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                Hi, {{current_user.username}}
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li><a href="{{ url_for('settings.user', username=current_user.username) }}">View Profile</a></li>
                <li><a href="{{ url_for('settings.edit_user') }}">Edit Profile</a></li>
                <li><a href="{{ url_for('auth.logout') }}">Logout</a></li>
              </ul>
            </li>
            {% endif %}
          </ul>
        </div><!--/.nav-collapse -->
      </div><!--/.container-fluid -->
</nav>
