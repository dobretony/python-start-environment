{% extends "base.html.j2" %}
{% set active_page='user'%}

{% block content %}
    <div class="container">
      <img src="{{ user.avatar(128) }}">
    </div>
    <div class="container">
      <h1>{{ _('User: %username', username=user.username) }}</h1>
      {% if user.about_me %}<p>{{ user.about_me }}</p>{% endif %}
      {% if user.last_seen %}<p> {{ _('Last seen on: %last_seen', last_seen=user.last_seen) }} </p>{% endif %}
      {% if user == current_user %}
      <p><a href="{{ url_for('settings.edit_user') }}">{{ _('Edit your profile') }}</a></p>
      {% endif %}
    </div>
    {% for post in posts %}
    <table class="table table-hover">
       <tr>
           <td width="70px">
               <a href="{{ url_for('settings.user', username=post.author.username) }}">
                   <img src="{{ post.author.avatar(70) }}" />
               </a>
           </td>
           <td>
             {% set user_link %}
                <a href="{{ url_for('user', username=post.author.username) }}">
                    {{ post.author.username }}
                </a>
             {% endset %}
             {{ _('%(username)s said %(when)s', username=user_link, when=moment(post.timestamp).fromNow()) }}
             <br>
             {{ post.body }}
           </td>
       </tr>
   </table>
    {% endfor %}
    <nav aria-label="...">
        <ul class="pager">
            <li class="previous{% if not prev_url %} disabled{% endif %}">
                <a href="{{ prev_url or '#' }}">
                    <span aria-hidden="true">&larr;</span> {{ _('Newer posts') }}
                </a>
            </li>
            <li class="next{% if not next_url %} disabled{% endif %}">
                <a href="{{ next_url or '#' }}">
                    {{ _('Older posts') }} <span aria-hidden="true">&rarr;</span>
                </a>
            </li>
        </ul>
    </nav>
{% endblock %}
